<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sleepy.erik.onlinecinema">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineCinema"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".mainscreen.HomeActivity"
            android:label="@string/title_activity_home"></activity>
        <activity android:name=".launchscreen.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signupscreen.SignUpActivity" />
        <activity android:name=".signinscreen.SignInActivity" />
    </application>

</manifest>